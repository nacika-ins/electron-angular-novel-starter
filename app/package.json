{
  "name": "angular2-electron-starter",
  "version": "0.3.0",
  "license": "MIT",
  "angular-cli": {},
  "scripts": {
    "start": "ng serve",
    "lint": "tslint \"src/**/*.ts\"",
    "test": "ng test",
    "pree2e": "webdriver-manager update",
    "e2e": "protractor",
    "build": "ng build && npm run cp src/assets dist/",
    "prepare": "cp -R electron/* dist/ && npm run export-main-js",
    "electron": "npm run prepare && electron dist",
    "build-electron": "npm run build && npm run electron",
    "package": "npm run build && npm run prepare && ./node_modules/electron-packager/cli.js dist App --platform=darwin --arch=all --out=dist-app --overwrite && ./mf.sh",
    "export-main-js": "uglifyjs -m -c -o ./dist/main.js ./electron/main.js",
    "compress-assets": "cd misc/file-encrypt && yarn start",
    "format": "find src -name *.ts | xargs tsfmt -r",
    "ng": "ng",
    "win-prepare": "mkdirp \"electron/node_modules\" && cpy \"electron/*\" \"dist/\" && npm run export-main-js",
    "win-copy-electron": "xcopy \"electron/*\" dist",
    "win": "npm run build && npm run win-prepare  && node ./node_modules/electron-packager/cli.js dist App --platform=win32 --arch=all --out=dist-app --overwrite",
    "cp": "cp-cli",
    "app": "npm run package && open dist-app/App-darwin-x64/App.app"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^4.3.2",
    "@angular/compiler": "^4.3.2",
    "@angular/compiler-cli": "^4.3.2",
    "@angular/core": "^4.3.2",
    "@angular/forms": "^4.3.2",
    "@angular/http": "^4.3.2",
    "@angular/platform-browser": "^4.3.2",
    "@angular/platform-browser-dynamic": "^4.3.2",
    "@angular/router": "^4.3.2",
    "@ngrx/store": "^4.0.2",
    "@types/crypto-js": "^3.1.33",
    "core-js": "^2.4.1",
    "crypto": "^0.0.3",
    "crypto-js": "^3.1.9-1",
    "file-encryptor": "^0.1.1",
    "glob": "^7.1.2",
    "lodash": "^4.17.4",
    "lovefield": "^2.1.12",
    "mkdirp": "^0.5.1",
    "rxjs": "^5.4.2",
    "ts-helpers": "^1.1.1",
    "zone.js": "^0.8.16"
  },
  "devDependencies": {
    "@angular/cli": "^1.2.6",
    "@types/jasmine": "^2.2.30",
    "@types/node": "^8.0.19",
    "browserify": "^14.4.0",
    "codelyzer": "^3.1.2",
    "copyfiles": "^1.2.0",
    "cp-cli": "^1.1.0",
    "cpy-cli": "^1.0.1",
    "electron": "^1.4.4",
    "electron-packager": "^8.1.0",
    "jasmine-core": "^2.7.0",
    "jasmine-spec-reporter": "^4.1.1",
    "karma": "^1.7.0",
    "karma-browserify": "^5.1.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-jasmine": "^1.0.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-remap-istanbul": "^0.6.0",
    "karma-webpack": "^2.0.4",
    "protractor": "^5.1.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2",
    "typescript-formatter": "^5.2.0",
    "uglify-es": "^3.0.27",
    "watchify": "^3.9.0"
  }
}
